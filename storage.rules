rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all scan images
    match /scans/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to scans folder
    // In a production app, you would want to add authentication here
    match /scans/{fileName} {
      allow write: if true;
      // Example with authentication (uncomment and modify for production):
      // allow write: if request.auth != null;
    }
    
    // Example of more restrictive rules:
    // match /users/{userId}/{allPaths=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
